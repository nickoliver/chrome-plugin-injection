{
  "name": "Injecta",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Injecting stuff",
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Inject!"
  },
  "web_accessible_resources": ["script.js"],
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ]
}